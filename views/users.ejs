<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Available Bus Routes</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>

    <!-- Navbar -->
    <%- include('partials/navbar') %>
        <section>
            <div class="text-2xl mt-4 font-semibold text-center">Users List
            </div>

            <% if (data.length> 0) { %>
                <div>
                    <div class="m-10 grid grid-cols-4 gap-4">
                        <%data.map((item)=>{%>
                            <div class="relative p-4 pb-2 border border-gray-500 rounded-lg shadow">
                                <%if(session && session=='admin' ){%>
                                    <form action="/delete/<%= item._id %>" method="get" class="absolute top-2 right-2">
                                        <button type="submit" title="Delete"
                                            class="text-red-500 hover:text-red-700 transition">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </form>
                                    <%}%>
                                        <ul>
                                            <p class="p-2 text-gray-500">
                                                <%= item._id %>
                                            </p>
                                            <p class="p-2">
                                                NAME: <%= item.name %>
                                            </p>
                                            <p class="p-2">
                                                EMAIL: <%= item.email %>
                                            </p>
                                            <p class="font-semibold p-2">
                                                <%= item.role %>
                                            </p>
                                        </ul>
                            </div>

                            <%})%>
                    </div>
                </div>
                <% } else { %>
                    <p class="text-center text-gray-600 p-5">No users available at the moment.</p>
                    <% } %>
        </section>
        <%- include('partials/footer') %>

</body>

</html>